- provide(:title, 'Edit your portfolio')
%h1 Edit portfolio item

= form_for @portfolio_item do |f|
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :subtitle
    = f.text_field :subtitle
  .field
    = f.label :body
    = f.text_area :body
  .action
    = f.submit 'Edit portfolio'
