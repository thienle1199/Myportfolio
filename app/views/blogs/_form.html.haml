= form_with(model: blog, local: true) do |form|
  - if blog.errors.any?
    #error_explanation
      %h2
        = pluralize(blog.errors.count, "error")
        prohibited this blog from being saved:
      %ul
        - blog.errors.full_messages.each do |message|
          %li= message
  .form-group
    = form.label :title
    = form.text_field :title, id: :blog_title, class: 'form-control'
  .form-group
    = form.label :body
    = form.text_area :body, id: :blog_body, class: 'form-control', rows: 10
  .form-group
    = form.label :topic_id
    = form.text_field :topic_id, class: 'form-control'
  .actions
    = form.submit "#{blog.new_record? ? 'Post' : 'Update'}", class: 'btn btn-primary'
