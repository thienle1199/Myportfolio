%header.masthead.mb-auto.mx-auto
  .inner
    %nav.navbar.navbar-expand-sm.nav-masthead.justify-content-center.navbar-dark
      %h2= link_to 'Thienle', root_path, class: 'masthead-brand'
      %button.navbar-toggler{ 'data-toggle' => 'collapse',
                               'data-target' => '#navbarCollapse' }
        %span.navbar-toggler-icon
      #navbarCollapse.collapse.navbar-collapse
        = link_to 'Home', root_path, class: 'nav-link'
        = link_to 'About', about_path, class: 'nav-link'
        = link_to 'Contact', contact_path, class: 'nav-link'
        = link_to 'Blogs', blogs_path, class: 'nav-link'
        = link_to 'Portfolios', portfolios_path, class: 'nav-link'
        - if current_user.is_a?(GuestUser)
          = link_to 'Register', new_user_registration_path, class: 'nav-link'
          = link_to 'Log in', new_user_session_path, class: 'nav-link'
        - else
          = link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link'
